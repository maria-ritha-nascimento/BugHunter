{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "BugHunter API",
    "description": "API para análises de segurança, incluindo varredura de portas, vulnerabilidades, DNS, SSL/TLS e geração de relatórios automatizados."
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/scan/ports": {
      "post": {
        "tags": ["Port Scanner"],
        "summary": "Varredura Avançada de Portas",
        "description": "Realiza uma varredura avançada para detectar portas abertas e os serviços associados.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string", "example": "127.0.0.1" },
                "ports": {
                  "type": "array",
                  "items": { "type": "integer" },
                  "example": [22, 80, 443]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados da varredura de portas.",
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string" },
                "results": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "status": { "type": "string" },
                      "service": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/scan/vulnerabilities": {
      "post": {
        "tags": ["Vulnerability Scanner"],
        "summary": "Escaneia vulnerabilidades associadas ao software detectado.",
        "description": "Usa a API do NIST para buscar vulnerabilidades relacionadas ao software informado.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "software_list": {
                  "type": "array",
                  "items": { "type": "string" },
                  "example": ["nginx", "apache"]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados do escaneamento de vulnerabilidades.",
            "schema": {
              "type": "object",
              "properties": {
                "results": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "software": { "type": "string" },
                      "id": { "type": "string" },
                      "description": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/scan/ssl": {
      "post": {
        "tags": ["SSL/TLS Scanner"],
        "summary": "Realiza verificação SSL/TLS.",
        "description": "Analisa os certificados SSL/TLS de um domínio e retorna informações como emissor e validade.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "domain": { "type": "string", "example": "example.com" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados do escaneamento SSL/TLS.",
            "schema": {
              "type": "object",
              "properties": {
                "domain": { "type": "string" },
                "results": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/scan/report": {
      "post": {
        "tags": ["Reports"],
        "summary": "Geração de Relatórios Automatizados",
        "description": "Gera relatórios detalhados em formato JSON ou PDF com base nas análises realizadas.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string", "example": "example.com" },
                "type": { "type": "string", "enum": ["json", "pdf"], "example": "pdf" },
                "details": {
                  "type": "object",
                  "additionalProperties": true,
                  "example": {
                    "ports": { "80": "open", "443": "open" },
                    "ssl": { "issuer": "Let's Encrypt", "valid_from": "2025-01-01" }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Relatório gerado com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string" },
                "details": { "type": "object" }
              }
            }
          }
        }
      }
    }
  }
}
