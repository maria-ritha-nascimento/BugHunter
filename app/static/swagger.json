{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "BugHunter API",
    "description": "API for network bug and vulnerability scanning."
  },
  "host": "127.0.0.1:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/scan/ports": {
      "post": {
        "tags": ["Network Scanner"],
        "summary": "Scan ports on a target host",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string", "example": "127.0.0.1" },
                "ports": {
                  "type": "array",
                  "items": { "type": "integer" },
                  "example": [22, 80, 443]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Port scan results",
            "schema": { "type": "object" }
          }
        }
      }
    },
    "/scan/vulnerabilities": {
      "post": {
        "tags": ["Vulnerability Scanner"],
        "summary": "Scan for software vulnerabilities",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "software": { "type": "string", "example": "Apache 2.4.49" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Vulnerability scan results",
            "schema": { "type": "object" }
          }
        }
      }
    },
    "/scan/web": {
      "post": {
        "tags": ["Web Scanner"],
        "summary": "Scan a web application for vulnerabilities",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string", "example": "http://example.com" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Web scan results",
            "schema": { "type": "object" }
          }
        }
      }
    }
  }
}
