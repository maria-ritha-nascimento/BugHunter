{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "BugHunter API",
    "description": "API for network bug and vulnerability scanning."
  },
  "host": "127.0.0.1:5000",
  "basePath": "/",
  "tags": [
    {
      "name": "Network Scanner",
      "description": "Endpoints for network scanning"
    },
    {
      "name": "Vulnerability Scanner",
      "description": "Endpoints for vulnerability detection"
    },
    {
      "name": "Web Scanner",
      "description": "Endpoints for web application scanning"
    },
    {
      "name": "DNS Scanner",
      "description": "Endpoints for DNS configuration analysis"
    },
    {
      "name": "SSL/TLS Scanner",
      "description": "Endpoints for SSL/TLS configuration scanning"
    }
  ],
  "paths": {
    "/scan/ports": {
      "post": {
        "tags": ["Network Scanner"],
        "summary": "Scan ports on a target host",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string" },
                "ports": {
                  "type": "array",
                  "items": { "type": "integer" }
                }
              },
              "required": ["target", "ports"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Scan results",
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string" },
                "results": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "status": { "type": "string" },
                      "service": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/scan/vulnerabilities": {
      "post": {
        "tags": ["Vulnerability Scanner"],
        "summary": "Scan for vulnerabilities based on software versions",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "software_list": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "version": { "type": "string" }
                    },
                    "required": ["name", "version"]
                  }
                }
              },
              "required": ["software_list"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Vulnerability scan results",
            "schema": {
              "type": "object",
              "properties": {
                "vulnerabilities": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "version": { "type": "string" },
                      "cve_list": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/scan/web": {
      "post": {
        "tags": ["Web Scanner"],
        "summary": "Scan a web application for vulnerabilities",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "url": { "type": "string" }
              },
              "required": ["url"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Web scan results",
            "schema": {
              "type": "object",
              "properties": {
                "url": { "type": "string" },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string" },
                      "details": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/scan/dns": {
      "post": {
        "tags": ["DNS Scanner"],
        "summary": "Scan DNS configuration of a domain",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "domain": { "type": "string" }
              },
              "required": ["domain"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "DNS scan results",
            "schema": {
              "type": "object",
              "properties": {
                "domain": { "type": "string" },
                "records": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/scan/ssl": {
      "post": {
        "tags": ["SSL/TLS Scanner"],
        "summary": "Scan SSL/TLS configuration of a domain",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "domain": { "type": "string" },
                "port": { "type": "integer", "default": 443 }
              },
              "required": ["domain"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "SSL/TLS scan results",
            "schema": {
              "type": "object",
              "properties": {
                "domain": { "type": "string" },
                "ssl_details": {
                  "type": "object",
                  "properties": {
                    "valid_from": { "type": "string" },
                    "valid_to": { "type": "string" },
                    "issuer": { "type": "string" },
                    "protocols": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "vulnerabilities": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
