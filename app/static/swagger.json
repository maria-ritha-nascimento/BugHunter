{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "BugHunter API",
    "description": "API for network bug and vulnerability scanning."
  },
  "host": "127.0.0.1:5000",
  "basePath": "/",
  "tags": [
    {
      "name": "Network Scanner",
      "description": "Endpoints for network scanning"
    },
    {
      "name": "Vulnerability Scanner",
      "description": "Endpoints for vulnerability detection"
    }
  ],
  "paths": {
    "/scan/ports": {
      "post": {
        "tags": ["Network Scanner"],
        "summary": "Scan ports on a target host",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string" },
                "ports": { "type": "array", "items": { "type": "integer" } }
              },
              "example": {
                "target": "127.0.0.1",
                "ports": [22, 80, 443]
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Scan results",
            "schema": {
              "type": "object",
              "properties": {
                "target": { "type": "string" },
                "results": {
                  "type": "object",
                  "additionalProperties": { "type": "object" }
                }
              }
            }
          }
        }
      }
    },
    "/scan/vulnerabilities": {
      "post": {
        "tags": ["Vulnerability Scanner"],
        "summary": "Scan for vulnerabilities in software versions",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "software_versions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "software": { "type": "string" },
                      "version": { "type": "string" }
                    }
                  }
                }
              },
              "example": {
                "software_versions": [
                  { "software": "nginx", "version": "1.21.6" },
                  { "software": "apache", "version": "2.4.54" }
                ]
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Vulnerabilities found",
            "schema": {
              "type": "object",
              "properties": {
                "vulnerabilities": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "cve_id": { "type": "string" },
                      "description": { "type": "string" },
                      "severity": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
